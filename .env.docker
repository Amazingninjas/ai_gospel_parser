# Docker Compose Environment Variables
# =====================================
# Copy this file to .env and customize for your deployment

# Database
DATABASE_URL=sqlite:///./data/gospel_parser.db

# JWT Security (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# AI Provider (ollama or gemini)
AI_PROVIDER=ollama

# Ollama Configuration (local LLM)
# Note: Use host.docker.internal to access host machine from Docker
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=mixtral

# Gemini Configuration (cloud LLM - alternative to Ollama)
GEMINI_API_KEY=

# Reference Texts (enable/disable features)
ENABLE_THAYERS=true
ENABLE_MOULTON_MILLIGAN=true
ENABLE_ROBERTSON_GRAMMAR=true
ENABLE_JOSEPHUS=true
ENABLE_ROBERTSON_WORD_PICTURES=true
ENABLE_VINCENT_WORD_STUDIES=true

# Frontend API URL
VITE_API_URL=http://localhost:8000
